<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Opciones" BarBackgroundColor="{StaticResource NavigationPrimary}"><!-- como es tabbed hay que especificar el color que tambien esta en app xml-->
    <TabbedPage.Children>
        <ContentPage Title="Contraseña">
            <ScrollView>
                <StackLayout Margin="20,0">
                    <Label Text="Ingresa tu contraseña actual" Style="{StaticResource AzulMedLbl}"></Label>
                    <Entry IsPassword="True" x:Name="P_actual"></Entry>
                    
                    <Label Text="" x:Name="P_mensaje" Style="{StaticResource AzulMedLbl}"></Label>
                    <Label Text="Ingresa la nueva contraseña" Style="{StaticResource AzulMedLbl}"></Label>
                    <Entry IsPassword="True"  x:Name="P_Nueva" TextChanged="FN_passCambio"></Entry>
                    <Button Text="Guardar" x:Name="P_but"  Clicked="Fn_CambioPass" Style="{StaticResource Buton}"></Button>
                </StackLayout>
            </ScrollView>
        </ContentPage>
        <ContentPage Title="Cuenta" x:Name="ContentCuenta">
            <StackLayout>
                <Label Style="{StaticResource AzulMedLbl}" Text="Vigencia"/>
                <Label Text="" FontSize="Medium" TextColor="Black" x:Name="C_fecha"/>
                <Label Text="En tu perfil, en la pestaña de perfi general encontrarás opciones de pago para reactivar tu cuenta" 
                       IsVisible="False" Style="{StaticResource AzulMedLbl}"/>
            </StackLayout>
        </ContentPage>
    </TabbedPage.Children>
</TabbedPage>