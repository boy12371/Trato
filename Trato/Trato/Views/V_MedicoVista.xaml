<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_MedicoVista">
    <ContentPage.Content>
        <StackLayout Orientation="Vertical" Margin="50,0,50,20" BackgroundColor="Red">
            <Image x:Name="img" BackgroundColor="Black"></Image>
            <ScrollView>
                <StackLayout Orientation="Vertical">
                    <Label x:Name="nombre" Margin="0,5,0,5"></Label>
                    <Label x:Name="especial" Margin="0,5,0,5"></Label>
                    <Label x:Name="domicilio" Margin="0,5,0,5"></Label>
                    <Label x:Name="info" Margin="0,5,0,5"></Label>
                    <Label x:Name="descuento" Margin="0,5,0,5"></Label>
                </StackLayout>
            </ScrollView>
            <Button  Clicked="Fn_Click" x:Name="boton" Margin="0,5,0,5"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>