<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Login" Title="Login">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Nombre de usuario"></Label>
            <Entry Placeholder="Nombre" x:Name="usu"></Entry>
            <Label Text="Ingresa tu contraseña"></Label>
            <Entry x:Name="pass" IsPassword="True" Placeholder="Contraseña"></Entry>
            <Button Text="Iniciar Sesion" Clicked="Fn_Login"></Button>
            <Label Text="¿No tienes cuenta?" FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Fn_Registro" NumberOfTapsRequired="1"></TapGestureRecognizer>
                </Label.GestureRecognizers>
            </Label>
            <Label x:Name="mensajes" Text=""></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>

