<?xml version="1.0" encoding="utf-8" ?>
<MasterDetailPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Master" 
                  MasterBehavior="Popover">
    <MasterDetailPage.Master>
        <ContentPage Padding="10" BackgroundColor="Gray" Title="Master">
            <ContentPage.Content>
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal" HeightRequest="100">
                        <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                        <Button Text="Buscador de Medicos" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_uno"></Button>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HeightRequest="100">
                        <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                        <Button Text="Lista de Servicio" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_dos"></Button>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HeightRequest="100">
                        <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                        <Button Text="Opciones" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_OpcionesStack"></Button>
                    </StackLayout>
                    <StackLayout Orientation="Vertical" x:Name="OpcionesPer" Margin="30,0">
                        <StackLayout Orientation="Horizontal" HeightRequest="100">
                            <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                            <Button Text="Info Personal" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_Gen"></Button>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HeightRequest="100">
                            <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                            <Button Text="Info Medica" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_Med"></Button>
                        </StackLayout>
                        <StackLayout Orientation="Horizontal" HeightRequest="100">
                            <Image Source="menu_icon" HorizontalOptions="Start"></Image>
                            <Button Text="Cambio contraseña" HorizontalOptions="FillAndExpand" BackgroundColor="Yellow" Clicked="Fn_Pass"></Button>
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
                <!--<StackLayout Margin="5,30,5,5">
                    
                    <Button Text="Buscador de Medicos" BackgroundColor="Yellow" Clicked="Fn_uno"></Button>
                    <Button Text="Lista de Servicio" BackgroundColor="Yellow"  Clicked="Fn_dos"></Button>
                    <Button Text="Perfil" BackgroundColor="Yellow" Clicked="Fn_Perfil"></Button>
                </StackLayout>
                -->
            </ContentPage.Content>
        </ContentPage>
    </MasterDetailPage.Master>

    <MasterDetailPage.Detail>
        <NavigationPage>
            <x:Arguments>
                <ContentPage Title="Bienvenido" >
                    <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">

                        <Image  Source="ICONOAPP.png" AbsoluteLayout.LayoutBounds="0,0,1,1" VerticalOptions="Center" HorizontalOptions="Center" AbsoluteLayout.LayoutFlags="All"></Image>

                        <Label x:Name="texto"></Label>
                    </AbsoluteLayout>
                </ContentPage>
            </x:Arguments>
        </NavigationPage>
    </MasterDetailPage.Detail>
</MasterDetailPage>  