<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trato.Views.V_Perfil">
    <ContentPage.Resources>
        <Style x:Key="Editor" TargetType="Editor">
            <Setter Property="VerticalOptions" Value="FillAndExpand"></Setter>
            <Setter Property="AutoSize" Value="TextChanges"></Setter>
        </Style>
    </ContentPage.Resources>
    <ContentPage.Content>
        <AbsoluteLayout AbsoluteLayout.LayoutBounds="0,0,1,1" AbsoluteLayout.LayoutFlags="All">
         
            <ScrollView AbsoluteLayout.LayoutBounds="0,0,1,.9" AbsoluteLayout.LayoutFlags="All">
                <StackLayout Orientation="Vertical">
                    <StackLayout Orientation="Horizontal" HorizontalOptions="FillAndExpand">
                        <Label Text="Nombre" HorizontalOptions="Start"></Label>
                        <Label Text="Nombre registrado no editar" HorizontalOptions="EndAndExpand"></Label>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="Domicilio" HorizontalOptions="Start"></Label>
                        <Entry Text="domiclio completo" x:Name="v_Domi" HorizontalOptions="CenterAndExpand"></Entry>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="Correo Electronico" HorizontalOptions="Start"></Label>
                        <Entry Text="Correo electronico" x:Name="v_Correo" HorizontalOptions="CenterAndExpand"></Entry>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="Telefono" HorizontalOptions="Start"></Label>
                        <Entry Text="1111111" HorizontalOptions="CenterAndExpand" x:Name="v_Tel" Keyboard="Numeric"></Entry>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="celular" HorizontalOptions="Start"></Label>
                        <Entry Text="111111" HorizontalOptions="CenterAndExpand" x:Name="v_Cel" Keyboard="Numeric"></Entry>
                    </StackLayout>
            
                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="Tipo de Sangre" HorizontalOptions="Start"></Label>
                        <Entry Text="sangre" x:Name="v_Sangre" HorizontalOptions="CenterAndExpand"></Entry>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal" HorizontalOptions="Fill">
                        <Label Text="Sexo" HorizontalOptions="Start"></Label>
                        <Entry x:Name="v_sexo" HorizontalOptions="CenterAndExpand"></Entry>
                    </StackLayout>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Alergias" HorizontalOptions="Start"></Label>
                        <Switch Toggled="Fn_SwiAlergias" HorizontalOptions="CenterAndExpand"></Switch>
                    </StackLayout>
                    <Editor Text=" lista de alergias" IsVisible="False" x:Name="v_Alergias" Style="{StaticResource Editor}" ></Editor>
                
                    <Label Text="Operaciones" HorizontalOptions="Start"></Label>
                    <Editor Text="lista de operaciones" x:Name="v_Operaciones" Style="{StaticResource Editor}"></Editor>

                    <StackLayout Orientation="Horizontal">
                        <Label Text="Enfermedades constantes?,¿Qúe esfermedad y que medicamentos toman?" HorizontalOptions="Start"></Label>
                        <Switch Toggled="Fn_SwiEnfer" HorizontalOptions="CenterAndExpand"></Switch>
                    </StackLayout>
                    <Editor Text="Lista de enfermedades" IsVisible="False" x:Name="v_Enferme" Style="{StaticResource Editor}"></Editor>


                    <StackLayout Orientation="Horizontal">
                        <Label Text="Toma algun medicamento?,¿Cúales?" HorizontalOptions="Start"></Label>
                    </StackLayout>
                    <Editor Text="Medicamentos actuales" x:Name="v_Medicamentos" Style="{StaticResource Editor}"></Editor>




                </StackLayout>
            </ScrollView>
            <Button Text=" guardar" Style="{StaticResource Buton}" AbsoluteLayout.LayoutBounds=".25,1,.75,.1" AbsoluteLayout.LayoutFlags="All"></Button>
        </AbsoluteLayout>
    </ContentPage.Content>
</ContentPage>